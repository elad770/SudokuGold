        <TextBlock Grid.Row="0" Margin="0,35,0,50" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gold">
        Sudoku Gold
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Name="spMainButtons" Grid.Row="1"  HorizontalAlignment="Center" >
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMainPageVisible}" Value="false">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <StackPanel.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                    <Setter Property="Width" Value="260" />
                    <Setter Property="Height" Value="46" />
                    <Setter Property="Margin" Value="0,0,0,30" />
                    <Setter Property="FontSize" Value="23" />
                    <Setter Property="Background" Value="#0077be"/>
                    <Setter Property="Foreground" Value="Gold"/>
                    <Setter Property="Command" Value="{Binding MainMenuOptionsGameCommand}"/>
                    <Setter Property="CommandParameter"  Value="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"/>
                    <!--<EventSetter Event="Click" Handler="Main_Menu_Options"/>-->
                </Style>
            </StackPanel.Resources>

            <Button Tag="{x:Static local:MainMenuOption.StartGame}"  Content="Play Game"/>
            <Button Tag="{x:Static local:MainMenuOption.HallOfFame}" x:Name="buHall" Content=" Hall of Fame"/>
            <Button Tag="{x:Static local:MainMenuOption.Settings}" x:Name="buSettings" Content="Settings"/>
            <Button Tag="{x:Static local:MainMenuOption.About}" x:Name="buAbout" Content="About Us"/>
            <Button Tag="{x:Static local:MainMenuOption.Exit}" x:Name="buExit" Content="Exit"/>
        </StackPanel>

        <Frame x:Name="contentFrame"  Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden">
            <Frame.Style>
                <Style TargetType="Frame">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMainPageVisible}" Value="False">
                            <Setter Property="NavigationUIVisibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Frame.Style>
        </Frame>
        <materialDesign:DialogHost Grid.RowSpan="2"  x:Name="RootDialog">

        </materialDesign:DialogHost>

    </Grid>


